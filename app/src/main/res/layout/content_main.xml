    <com.fizyoteknoterapi.muhendis.bioprint.ThreatmentImageView
        android:id="@+id/boy_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="1280px"



        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <com.fizyoteknoterapi.muhendis.bioprint.ThreatmentImageView
        android:id="@+id/anterior_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="1280px"
        android:scaleType="fitStart"


        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
         />
    <com.fizyoteknoterapi.muhendis.bioprint.ThreatmentImageView
        android:id="@+id/posterior_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="1280px"
        android:scaleType="fitStart"





        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <com.fizyoteknoterapi.muhendis.bioprint.ThreatmentImageView
        android:id="@+id/lateral_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="1280px"
        android:scaleType="fitStart"




        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas_neue_regular"
        android:text="Bütün girişleri yaptıktan sonra sonuçlar burada gözükecektir."
        android:textSize="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:id="@+id/boy_aciklama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:text="@string/boy_text"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />






</android.support.constraint.ConstraintLayout>
